 <% provide(:title, @title) %>
 <div class="wrapper row-offcanvas row-offcanvas-left">
    <aside class="left-side sidebar-offcanvas">
        <%= render 'shared/user_sidebar' %> 
    </aside>
    <aside class="right-side">
    <section class="content-header">
        <h1>Mi Perfil<small>Detalle</small></h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-home"></i> Inicio</a></li>
            <li class="active">Mi perfil</li>
        </ol>
    </section>
    <section class="content">
        <div class="row-fluid">
            <div class="span12">
                <div class="span2">
                    <img src="/assets/Foodzy_Badges.png" class="img-circle" alt="User Image" />
                </div>
                <div class="span3">
                    <h3><%= @user.name %></br>EXPERTO</h3>
                    <h4>1,000,000 puntos</h4>
                    <b>Solo te faltan 30,000 para el nivel Gurú. </b><a href="#">¡Avanza al siguiente nivel!</a>
                </div>
                <div class="span7">
                    <div class="row-fluid">
                        <%= render 'shared/user_stats' %>                               
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span9">
                    <%= render 'shared/user_prox_viajes' %>
                    <%= render 'shared/user_prox_promo' %> 
                </div>
                <div class="span3">
                    <%= render 'shared/user_ultimas_medallas' %> 
                </div>
            </div>
        </div>
    </section>                                  
    </aside><!-- /.right-side -->
</div><!-- ./wrapper -->