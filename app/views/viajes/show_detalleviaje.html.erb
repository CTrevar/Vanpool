  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp" %>
 <%= javascript_include_tag "rutas" %>
<%= stylesheet_link_tag "rutas", media: "all" %>
 <% provide(:title, @title) %>
 <div class="wrapper row-offcanvas row-offcanvas-left">
    <aside class="left-side sidebar-offcanvas">
        <%= render 'shared/user_sidebar' %> 
    </aside>
    <aside class="right-side">
    <section class="content-header">
        <h1>Ruta<small>Detalle</small></h1>
        <ol class="breadcrumb">
            <li><a href="/dashboard"><i class="fa fa-home"></i> Inicio</a></li>
            <li><a href="/buscar"><i class="fa fa-user"></i>BÃºsqueda</a></li>
            <li class="active">Detalle de ruta</li>
        </ol>
    </section>
     <section class="content">

                    <!-- Main content -->
                <div class="form-group">
                        <h2 class="page-header">
                        Ruta <%= @viaje.ruta.nombre %> 
                        </h2>
                </div>
                <div class="row-fluid">
                <div class="span12">
                    
                            <div class="span4">
                                <div class="span6">
                                    <small>PARADA ORIGEN:</small>
                                <h4><%= @viaje.ruta.paradas.order('posicion ASC').first.nombre %> <a href="#">Cambiar</a></h4>
                                <small>PARADA DESTINO:</small>
                                <h4><%= @viaje.ruta.paradas.order('posicion ASC').last.nombre %><a href="#">Cambiar</a></h4>

                                
                                </div>

                                <div class="span6">
                                     <small>FECHA:</small>
                                <h4><%= @viaje.fecha%> <a href="#">Cambiar</a></h4>
                                <small>HORA DE SALIDA:</small>
                                <h4><%=(Time.now).strftime("%I:%M%p")%> <a href="#">Cambiar</a></h4>
                                <small>HORA DE LLEGADA:</small>
                                <h4><%=(Time.now + @viaje.ruta.paradas.sum(:tiempo).to_i).strftime("%I:%M%p")%></h4>
                                <small>PRECIO:</small>
                                <h4><%=number_to_currency(@viaje.ruta.precio, :unit => "$")%></h4>
                                </br>
                                
                                </div>
                                <div class="row-fluid">
                                    <%= link_to "Buscar otra ruta", "/buscar", class:"btn btn-buscar-nav btn-flat" %>
                                    <%= link_to "Comprar viaje", "/compra", class:"btn btn-pagar-l btn-flat pull-right" %>
                                </div>
                            </div>
                               
                            <div class="span8">
                            <div class="mapbox" id="map-canvas"></div>
                            </div> 
                </div>
                
            </div>
            </section>                                  
      </div>

                </section>                              
    </aside><!-- /.right-side -->
</div><!-- ./wrapper -->