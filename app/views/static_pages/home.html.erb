<% provide(:title, 'La nueva forma de llegar a tu destino') %>

<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?v=3.exp" %>
<%= javascript_include_tag "rutas" %>

<%= stylesheet_link_tag "rutas", media: "all" %>

<% if signed_in? %>
	<div class="row">
		<aside class="span4">
		<section>
			<%= render 'shared/user_info' %>
		</section>
		<section>
			<%= render 'shared/stats' %>
		</section>
		<section>
			<%= render 'shared/micropost_form' %>
		</section>
		</aside>
		<div class="span8">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>

	 <div class="row-fluid map">
      <div class="span12">
        <div class="container">
          <div class="row-fluid">
                  <div class="span4">
                    <div class="box">
                        <div class="box-header">
                          <h3 class="box-title">Busca tu ruta</h3>
                        </div><!-- /.box-header -->
                            <!-- form start -->
                              <form role="form">
                                <div class="box-body">
                                  <div class="form-group">
                                    <label for="origen">¿Dónde comienzas tu viaje?</label>
                                    <div class="input-group">
                                      <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                      <input id="origenRuta" class="form-control"  placeholder="Origen">
                                    </div>
                                  </div>
                                  <div class="form-group">
                                    <label for="destino">¿Dónde terminas tu viaje?</label>
                                      <div class="input-group">
                                        <span class="input-group-addon"><i class="fa fa-map-marker"></i></span>
                                        <input id="destinoRuta" class="form-control"  placeholder="Destino">
                                      </div>
                                    </div>
                                  <div class="form-group">
                                    <label for="diaViaje">¿Cuándo quieres viajar?</label>
                                        <div class="row-fluid">
                                          <div class="span6">
                                            <div class="form-group">
                                            <div class="input-group">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input  id="diaViajeRuta" type="text" class="form-control" data-inputmask="'alias': 'dd/mm/yyyy'" data-mask/>
                                        </div><!-- /.input group -->
                                    </div><!-- /.form group -->
                                          </div>
                                          <div class="span6">
                                           <div class="bootstrap-timepicker">
                                        <div class="form-group">
                                            <div class="input-group">
                                                
                                                <div class="input-group-addon">
                                                    <i class="fa fa-clock-o"></i>
                                                </div>
                                                <input type="text" id="horarioRuta" class="form-control timepicker"/>
                                            </div><!-- /.input group -->
                                        </div><!-- /.form group -->
                                    </div>
                                  </div>
                                        </div>
                                  </div>
                                    <button type="submit" class="btn btn-flat btn-buscar pull-right">Buscar mi ruta</button>

                                </div><!-- /.box-body -->
                                  </br>
                                      </br>
                              </form>
                    </div><!-- /.box -->
                  </div>         
                <div class="span8">
                  <div class="mapbox" id="map-canvas">

                  </div>
                </div>
          </div>
        </div>
      </div>
    </div>

   <!-- Container -->
    <div class="container marketing">
      <div class="row-fluid">
        <div class="span4">
          <img class="img-circle" src="/assets/van.jpg">
        </div>
        <div class="span8">
          <h2>La nueva forma de llegar a tu trabajo o escuela.</h2>
          <p>Deja que nosotros te llevemos y te recojamos en una van de lujo. Sólo paga por los trayectos que uses.</p>
        </div>
      </div>
    </div><!-- /.container --> 
<% end %>