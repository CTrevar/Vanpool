<% provide(:title, "Ingresar") %>
<div class="row-fluid">
	<div class="container">
		<div class="span6 offset3">
			<%= form_for(:session, url: sessions_path) do |f| %>
			<div class="box-login">
                <h1>Ingresar</h1>
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Correo Electrónico</label>
                            <%= f.text_field :email, class:"form-control", placeholder:"micorreo@ejemplo.com" %>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Contraseña</label>
                        <%= f.password_field :password, class:"form-control", placeholder:"Micontraseña"%>
                    </div>
                    <div class="box-footer">
                        <%= f.submit "Entrar", class: "btn btn-flat btn-ingresar pull-right" %>
                        </br>
                        <hr></hr>
                    </div>
                </div><!-- /.box-body -->
                <a class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook"></i> Entrar con Facebook</a> 
                </br>
                <p>¿No tienes cuenta? <%= link_to "¡Registrate!", signup_path %></p>   
            </div>
        	<% end %>
		</div>
	</div>
</div>