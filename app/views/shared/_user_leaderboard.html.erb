    </div>
    <div class="side">
    

<% if current_user.provider %>
       <h4>Amigos</h4>
       <% @friends.each do |friend| %>
       <h5><%= friend["name"] %></h5>
       <% end%>
       
  <% else%>
          <table class="table">
            <tr>
            <th>Cliente</th>
            <th>Puntos</th>
