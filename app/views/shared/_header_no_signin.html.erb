<header class="header">
    <a href="<%=root_path%>" class="logo"><img src="/assets/logo.png" class="img" alt="logo Image" /></a>
    <nav class="navbar navbar-static-top" role="navigation">
        <div class="navbar-right">
            <ul class="nav navbar-nav">
                <li class="dropdown ciudad-menu user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><b>Monterrey MX</b></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <span><b>México</b></span>
                        <li class="ciudad"><a href="#"><span>Ciudad de México</span></li></a>
                        <li class="ciudad"><a href="#"><span>Monterrey</span></li></a>
                        </hr>
                        <span><b>Chile</b></span>
                        <li class="ciudad"><a href="#"><span>Santiago</span></li></a>
                    </ul>
                </li>
                <li class="dropdown registro user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>Registrate</span></a>
                    <ul class="dropdown-menu">
                       
                            <div class="box-login">
                                <div class="box-body">
                                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                                    <%= devise_error_messages! %>

                                    <div class="form-group">
                                        <label>Nombre</label>
                                        <%= f.text_field :name, autofocus: true %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Correo Electrónico</label>
                                        <%= f.email_field :email, autofocus: true %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Contraseña</label>
                                        <% if @validatable %>
                                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                                        <% end %><br />
                                        <%= f.password_field :password, autocomplete: "off" %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Verificar Contraseña</label>
                                        <%= f.password_field :password_confirmation, autocomplete: "off" %>
                                    </div>
                                    <div class="box-footer">
                                        <%= f.submit "Crear mi cuenta", class: "btn btn-flat btn-registro pull-right" %>
                                        </br>
                                        <hr></hr>
                                    </div>
                                    <% end %>
                                </div><!-- /.box-body -->
                                <a class="btn btn-block btn-social btn-facebook" href="users/auth/facebook"><i class="fa fa-facebook"></i> Registrate con Facebook </a>   
                            </div>
                        
                    </ul>
                </li>
                <li class="dropdown ingresar user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>Ingresar</span></a>
                        <ul class="dropdown-menu">
               
                                <div class="box-login">
                                    <div class="box-body">
                                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Correo Electrónico</label>
                                            <%= f.email_field :email, autofocus: true %>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Contraseña</label>
                                           <%= f.password_field :password, autocomplete: "off" %>
                                        </div>
                                       
                                        <div class="box-footer">
                                             <%= f.submit "Entrar", class: "btn btn-flat btn-ingresar pull-right" %>
                                        </br>
                                        <hr></hr>
                                        </div>
                                    <% end %>
                                    </div><!-- /.box-body -->
                                    <a class="btn btn-block btn-social btn-facebook" href="users/auth/facebook">
                                        <i class="fa fa-facebook"></i> Iniciar sesión con Facebook
                                    </a>    
                                </div>
                             
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>