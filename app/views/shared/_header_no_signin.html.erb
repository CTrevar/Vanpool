<header class="header">
    <a href="<%=root_path%>" class="logo"><img src="/assets/logo.png" class="img" alt="logo Image" /></a>
    <nav class="navbar navbar-static-top" role="navigation">
        <div class="navbar-right">
            <ul class="nav navbar-nav">
                <li class="dropdown ciudad-menu user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span><b>Monterrey MX</b></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <span><b>México</b></span>
                        <li class="ciudad"><a href="#"><span>Ciudad de México</span></li></a>
                        <li class="ciudad"><a href="#"><span>Monterrey</span></li></a>
                        </hr>
                        <span><b>Chile</b></span>
                        <li class="ciudad"><a href="#"><span>Santiago</span></li></a>
                    </ul>
                </li>
                <li class="dropdown registro user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>Registrate</span></a>
                    <ul class="dropdown-menu">
                        <%= form_for(User.new) do |f| %>
                            <div class="box-login">
                                <div class="box-body">
                                    <div class="form-group">
                                        <label>Nombre</label>
                                        <%= f.text_field :name, class:"form-control", placeholder:"Tu nombre" %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputEmail1">Correo Electrónico</label>
                                        <%= f.text_field :email, class:"form-control", placeholder:"correo@ejemplo.com" %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Contraseña</label>
                                        <%= f.password_field :password, class:"form-control", placeholder:"tucontraseña"%>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword1">Verificar Contraseña</label>
                                         <%= f.password_field :password_confirmation, class:"form-control", placeholder:"tucontraseña"%>
                                    </div>
                                    <div class="box-footer">
                                        <%= f.submit "Crear mi cuenta", class: "btn btn-flat btn-registro pull-right" %>
                                        </br>
                                        <hr></hr>
                                    </div>
                                </div><!-- /.box-body -->
                                <a class="btn btn-block btn-social btn-facebook"><i class="fa fa-facebook"></i> Registrate con Facebook </a>    
                            </div>
                        <% end %>
                    </ul>
                </li>
                <li class="dropdown ingresar user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span>Ingresar</span></a>
                        <ul class="dropdown-menu">
                            <%= form_for(:session, url: sessions_path) do |f| %>
                                <div class="box-login">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label for="exampleInputEmail1">Correo Electrónico</label>
                                            <%= f.text_field :email, class:"form-control", placeholder:"micorreo@ejemplo.com" %>
                                        </div>
                                        <div class="form-group">
                                            <label for="exampleInputPassword1">Contraseña</label>
                                            <%= f.password_field :password, class:"form-control", placeholder:"Micontraseña"%>
                                        </div>
                                        <div class="box-footer">
                                            <%= f.submit "Entrar", class: "btn btn-flat btn-ingresar pull-right" %>
                                            </br>
                                        <hr></hr>
                                        </div>
                                        
                                    </div><!-- /.box-body -->
                                    <a class="btn btn-block btn-social btn-facebook">
                                        <i class="fa fa-facebook"></i> Entrar con Facebook
                                    </a>    
                                </div>
                                <% end %>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>