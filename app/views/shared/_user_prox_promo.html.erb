<div class="box box-primary">
    <div class="box-header">
        <i class="fa fa-asterisk"></i>
        <h3 class="box-title">Últimas promociones</h3>
    </div>
    <div class="box-body">
        <div class="item">
            <% if @descuentos==nil then %>
            <div class="msg-vacio">
                <h4><b>Aún no tienes promociones.
                <a href="#"> Aprende como ganar promociones.</a></b></h4>
            </div>
            <% else %>
                <%= @descuentos.nombre %><br>
                <%= @descuentos.descripcion %><br>
                <%= @descuentos.porcentaje %>%
            <% end %>
        </div><!-- /.item -->   
    </div><!-- box body-->
    <div class="box-footer">
    </div>
</div><!-- /.box --> 