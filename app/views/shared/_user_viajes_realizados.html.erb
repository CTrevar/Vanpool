<div class="box box-success">
    <div class="box-header">
        <i class="fa fa-road"></i>
        <h3 class="box-title">Viajes Realizados</h3>
    </div>
    <div class="box-body">
        
        <% if @validaviajes==false then %>
        <div class="msg-vacio">
            <h4><b>AÃºn no tienes viajes realizados</b></h4>
            (Mensaje de la empresa)
        </div>
    <% else %>
        <% @reservaciones_realizadas.each do |reservacion| %>
            <div class="item">
        <div class="row-fluid">
            <div class="span6">
                <label>ID Viaje:</label><%=reservacion.viaje_id%></br>
                <label>Ruta:</label><%=reservacion.viaje.ruta.nombre%></br>
                <label>Fecha:</label><%=reservacion.viaje.fecha.strftime("%d/%m/%Y")%> </br>
                <label>Hora de salida:</label><%=reservacion.viaje.horainicio.strftime("%H:%M %p")%> </br>
                <label>Hora de llegada:</label><%=(reservacion.viaje.horainicio+ reservacion.viaje.ruta.paradas.sum(:tiempo).to_i).strftime("%I:%M%p")%></br>
            </div>
            <div class="span6">
                <button type="button" class="btn btn-success">Ver detalle</button>
                <% if existe_retroalimentacion(reservacion)==false then %>
                <%= link_to "Evaluar", "reservacions/#{reservacion.id}/retroalimentacion", class:"btn btn-default btn-flat" %>
                <% end %>
            </div>
        </div>
    </div><!-- /.item -->
<hr></hr>
        <% end %>
    <% end %>
    </div><!-- /.boxbody -->
</div><!-- /.box --> 