  <!DOCTYPE html>
<html>
<head>

  <title><%= full_title(yield(:title)) %></title>
  
  <%= stylesheet_link_tag "bootstrap.min", media: "all" %>
  <%= stylesheet_link_tag "bootstrap-responsive", media: "all" %>
  <%= stylesheet_link_tag "font-awesome.min", media: "all" %>
  <%= stylesheet_link_tag "ionicons.min", media: "all" %>
  <%= stylesheet_link_tag "AdminLTE", media: "all" %>
  <%= stylesheet_link_tag "vanpool", media: "all" %>
  <%= stylesheet_link_tag "timepicker/bootstrap-timepicker", media: "all" %>
  <%= stylesheet_link_tag "application", media: "all" %>


  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js" %>
  <%= stylesheet_link_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/themes/smoothness/jquery-ui.css", media: "all" %>
  <%= javascript_include_tag "//ajax.googleapis.com/ajax/libs/jqueryui/1.11.2/jquery-ui.min.js" %>

  <!--  Configuracion para jTables. Incluir uno de los estilos para la jTable. -->
  <%= stylesheet_link_tag "themes/metro/darkgray/jtable.min.css" %>
  <%= javascript_include_tag "jquery.jtable.js" %>

  <%= javascript_include_tag "plugins/input-mask/jquery.inputmask" %>
  <%= javascript_include_tag "plugins/input-mask/jquery.inputmask.date.extensions" %>
  <%= javascript_include_tag "plugins/daterangepicker/daterangepicker" %>
  <%= javascript_include_tag "plugins/colorpicker/bootstrap-colorpicker.min" %>
  <%= javascript_include_tag "plugins/timepicker/bootstrap-timepicker.min" %>
  <%= javascript_include_tag "bootstrap/bootstrap.min" %>
  <%= javascript_include_tag "AdminLTE/app" %>

  <%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
  <script src="//www.google.com/jsapi"></script>
  <%= csrf_meta_tags %>
  
  <script type="text/javascript">
      $.ajaxSetup({
        headers: {
          'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
        }
      });
  </script>
  <%= render 'layouts/shim' %>
</head>

<body class="skin-green">

  <%= render 'layouts/header' %>
  <div>
  
  <% flash.each do |key, value| %>
  <%= content_tag :div, value, :class => "flash #{key}" unless value.blank? %>
  <% end %>

  <%= yield %>
  </div>
  <%= render 'layouts/footer' %>
</body>
</html>
